<?xml version="1.0" encoding="UTF-8"?>
<viewset name="User Views Niels" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <views>
        <view name="Locality"
            class="edu.ku.brc.specify.datamodel.Locality"
            busrules="edu.ku.brc.specify.datamodel.busrules.LocalityBusRules"
            resourcelabels="false">
            <desc><![CDATA[Locality form.]]></desc>
            <altviews>
                <altview name="Locality View" viewdef="Locality" mode="view"/>
                <altview name="Locality Edit" viewdef="Locality" mode="edit" default="true"/>
            </altviews>
        </view>
        
        <view name="LocalityDetail"
            class="edu.ku.brc.specify.datamodel.LocalityDetail"
            resourcelabels="false">
            <desc><![CDATA[LocalityDetail form.]]></desc>
            <altviews>
                <altview name="LocalityDetail View" viewdef="LocalityDetail" mode="view"/>
                <altview name="LocalityDetail Edit" viewdef="LocalityDetail" mode="edit" default="true"/>
            </altviews>
        </view>
 
        <view name="GeoCoordDetail"
            class="edu.ku.brc.specify.datamodel.GeoCoordDetail"
            isinternal="true"
            resourcelabels="false">
            <desc><![CDATA[Locality form.]]></desc>
            <altviews>
                <altview name="GeoCoordDetail View" viewdef="GeoCoordDetail" mode="view"/>
                <altview name="GeoCoordDetail Edit" viewdef="GeoCoordDetail" mode="edit" default="true"/>
            </altviews>
        </view>
    </views>

    <viewdefs>

        <viewdef name="Locality"
            type="form"
            class="edu.ku.brc.specify.datamodel.Locality"
            gettable="edu.ku.brc.af.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.af.ui.forms.DataSetterForObj">

            <desc><![CDATA[Locality]]></desc>
            <columnDef>135px,2px,180px,5px,115px,2px,180px,5px,115px,2px,180px,p:g</columnDef>
            <!--columnDef>120px,2px,140px,5px,120px,2px,155px,5px,140px,2px,156px,0px,15px,p:g</columnDef-->
            <columnDef os="lnx">115px,2px,142px,5px,110px,2px,193px,5px,155px,2px,192px,0px,15px,p:g</columnDef>
            <columnDef os="mac">130px,2px,162px,5px,130px,2px,213px,5px,175px,2px,212px,0px,15px,p:g</columnDef>
            <columnDef os="exp">p,2px,p:g(4),5px:g,p,2px,p:g,5px:g,p,2px,p:g(2),0px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2dlu"/>
            <enableRules>
                <rule id="georef"><![CDATA[localityName.isNotEmpty() && geography.isNotEmpty()]]></rule>
            </enableRules>
			
            
            <rows>
                <row>
                    <cell type="label" labelfor="geography"/>
                    <cell type="field" id="geography" name="geography" uitype="querycbx" initialize="name=Geography"  colspan="9"/>
                </row>
                <row>
                    <cell type="label" labelfor="localityName"/>
                    <cell type="field" id="localityName" name="localityName" uitype="textareabrief"  colspan="9" rows="2"/>
                </row>
                <row>
                    <cell type="label" labelfor="5"/>
                    <cell type="field" id="5" name="this" uitype="plugin" initialize="name=LatLonUI" colspan="9"/>
                </row>
                <row>
                    <cell type="label" labelfor="10"/>
                    <cell type="field" id="10" name="datum" uitype="combobox" cols="5"/>
                    <cell type="label" labelfor="101"/>
                    <cell type="field" id="101" name="text2" uitype="combobox" cols="5"/>
                    <cell type="label" labelfor="6"/>
                    <cell type="field" id="6" name="latLongMethod" uitype="combobox" cols="5"/>
                </row>
                <row>
                    <cell type="label" labelfor="7"/>
                    <cell type="field" id="7" name="originalElevationUnit" uitype="combobox" cols="5"/>
					<cell type="label" labelfor="31"/>
                    <cell type="field" id="31" name="shortName" uitype="text" cols="5"/> 
                </row>
                <row>
                    <cell type="label" labelfor="8"/>
                    <cell type="field" id="8" name="minElevation" uitype="text" cols="5"/>
                    <cell type="label" labelfor="9"/>
                    <cell type="field" id="9" name="maxElevation" uitype="text" cols="5"/>
                    <cell type="label" labelfor="12"/>
                    <cell type="field" id="12" name="text1" uitype="combobox" cols="5"/>
                </row>
                <row>
                    <cell type="label" labelfor="40"/>
                    <cell type="field" id="40" name="elevationMethod" uitype="combobox" cols="5"/>
                    <cell type="label" labelfor="13"/>
                    <cell type="field" id="13" name="verbatimElevation" uitype="text" cols="5"/>                
				</row>
                <row>
                    <cell type="subview" id="28" name="localityDetails" viewname="LocalityDetail" colspan="12"/> 
                </row>
                <row>
                    <cell type="subview" id="128" name="geoCoordDetails" viewname="GeoCoordDetail" colspan="12"/> 
                </row>
                <row>
                    <cell type="panel" id="pluginPanel" name="pluginPanel" coldef="135px,2px,117px,5px,196px,5px,99px,2px,99px,2px,99px" rowdef="p" colspan="12">
                        <rows>
                            <row>
                                <cell type="label" label=" "/>
                                <cell type="field" id="georef" name="this" uitype="plugin" initialize="name=LocalityGeoRef;title=Geo Ref;geoid=geography;locid=localityName;llid=5"/>
                                <cell type="field" id="ge" name="this" uitype="plugin" initialize="name=LocalityGoogleEarth;title=Google Earth;watch=5"/>
                                <cell type="subview" id="attachments" viewname="LocalityAttachmentMEL" name="localityAttachments" initialize="align=right;btn=true"/>
                            </row>
                        </rows>
                    </cell>
                </row>
                <row>
                    <cell type="separator" label="" colspan="12"/>
                </row>
                <row>
                    <cell type="label" labelfor="16"/>
                    <cell type="field" id="16" name="createdByAgent" uitype="label" readonly="true" uifieldformatter="Agent"/>
                    <cell type="label" label="" colspan="3"/>
                    <cell type="label" labelfor="17"/>
                    <cell type="field" id="17" name="timestampCreated" uitype="label" readonly="true" cols="20"/>
                </row>
                <row>
                    <cell type="label" labelfor="18"/>
                    <cell type="field" id="18" name="modifiedByAgent" uitype="label" readonly="true" uifieldformatter="Agent"/>
                    <cell type="label" label="" colspan="3"/>
                    <cell type="label" labelfor="19"/>
                    <cell type="field" id="19" name="timestampModified" uitype="label" readonly="true" cols="20"/>
                </row>	
            </rows>
        </viewdef>

        <viewdef
                type="form"
                name="LocalityDetail"
                class="edu.ku.brc.specify.datamodel.LocalityDetail"
                gettable="edu.ku.brc.af.ui.forms.DataGetterForObj"
                settable="edu.ku.brc.af.ui.forms.DataSetterForObj">
            <desc><![CDATA[LocalityDetail subform for Locality]]></desc>

            <columnDef>135px,2px,180px,5px,115px,2px,180px,5px,115px,2px,180px,p:g</columnDef>
            <!--columnDef>100px,2px,100px,5px,80px,2px,120px,5px,65px,2px,116px,5px,105px,2px,118px,p:g</columnDef-->
            <columnDef os="lnx">113px,2px,125px,5px,90px,2px,125px,5px,89px,2px,115px,5px,120px,2px,115px,0px,p:g</columnDef>
            <columnDef os="mac">130px,2px,120px,5px,116px,2px,140px,5px,117px,2px,120px,5px,146px,2px,120px,p:g</columnDef>
            <columnDef os="exp">p,2px,p:g(2),5px:g,p,2px,p:g(2),5px:g,p,2px,p:g(2),5px:g,p,2px,p:g(2)</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>

            <rows>
                <row>
                    <cell type="label" labelfor="text2"/>
                    <cell type="field" id="text2" name="text2" uitype="text" colspan="5"/>
                    <cell type="label" labelfor="gazetteer"/>
                    <cell type="field" id="gazetteer" name="drainage" uitype="text"/>
                </row>
                <row>
                    <cell type="label" label="UTM:" initialize="align=right"/>
                    <cell type="panel" id="outerPanel" name="outerPanel" coldef="80px,5px,80px,5px,120px,5px,120px,p:g" rowdef="p,4px,p" colspan="10">
                        <rows>
                            <row>
                                <cell type="label" labelfor="1" initialize="align=center"/>
                                <cell type="label" labelfor="3" initialize="align=center"/>
                                <cell type="label" labelfor="2" initialize="align=center"/>
                                <cell type="label" labelfor="4" initialize="align=center"/>
                            </row>
                            <row>
                                <cell type="field" id="1" name="utmDatum" uitype="combobox"/>
                                <cell type="field" id="3" name="mgrsZone" uitype="text"/>
                                <cell type="field" id="2" name="utmEasting" uitype="text"/>
                                <cell type="field" id="4" name="utmNorthing" uitype="text"/>
                            </row>
                        </rows>
                    </cell>
                </row>
                <row>
                    <cell type="label" labelfor="islg"/>
                    <cell type="field" id="islg" name="islandGroup" uitype="text"/>
                    <cell type="label" labelfor="isl"/>
                    <cell type="field" id="isl" name="island" uitype="text"/>
                    <cell type="label" labelfor="wb"/>
                    <cell type="field" id="wb" name="waterBody" uitype="text"/>
                </row>
                <row>
                    <cell type="label" labelfor="sd"/>
                    <cell type="field" id="sd" name="startDepth" uitype="text"/>
                    <cell type="label" labelfor="ed"/>
                    <cell type="field" id="ed" name="endDepth" uitype="text"/>
                    <cell type="label" labelfor="sdu"/>
                    <cell type="field" id="sdu" name="startDepthUnit" uitype="combobox"/>
                </row>
            </rows>
        </viewdef>

  
        <viewdef name="GeoCoordDetail"
            type="form"            
            class="edu.ku.brc.specify.datamodel.GeoCoordDetail"
            gettable="edu.ku.brc.af.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.af.ui.forms.DataSetterForObj">

            <desc><![CDATA[Sub Collecting Event]]></desc>
            <columnDef>135px,2px,180px,5px,115px,2px,180px,5px,115px,2px,180px,p:g</columnDef>
            <!--columnDef>100px,2px,200px,5px,190px,2px,116px,5px,115px,2px,90px,p:g</columnDef-->
            <!--columnDef os="lnx">115px,2px,200px,5px,153px,2px,140px,5px,153px,2px,140px,p:g</columnDef>
            <columnDef os="mac">130px,2px,220px,5px,281px,2px,120px,5px,137px,2px,128px,p:g</columnDef>
            <columnDef os="exp">p,2px,p,5px:g,p,2px,116px,5px:g,p,2px,90px,p:g</columnDef-->
            <rowDef auto="true" cell="p" sep="2px"/>
            
            <rows>
                <row>
                    <cell type="label" labelfor="1"/>
                    <cell type="field" id="1" name="geoRefDetBy" uitype="querycbx" initialize="name=Agent" colspan="5" />
                    <cell type="label" labelfor="2"/>
                    <cell type="field" id="2" name="geoRefDetDate" uitype="formattedtext" uifieldformatter="Date"/>
                </row>
                <row>
                    <cell type="label" labelfor="geoRefAccuracy"/>
                    <cell type="field" id="geoRefAccuracy" name="geoRefAccuracy" uitype="text"/>
                    <cell type="label" labelfor="namedPlaceExtent"/>
                    <cell type="field" id="namedPlaceExtent" name="namedPlaceExtent" uitype="text"/>
                    <cell type="label" labelfor="originalCoordSystem"/>
                    <cell type="field" id="originalCoordSystem" name="originalCoordSystem" uitype="text" readonly="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="7" />
                    <cell type="field" id="7" name="text1" uitype="text" colspan="9"/>
                </row>
                <row>
                    <cell type="label" labelfor="5" />
                    <cell type="field" id="5" name="geoRefRemarks" uitype="textareabrief" rows="2" colspan="9"/>
                </row>
				<row>
                    <cell type="label" labelfor="6" />
                    <cell type="field" id="6" name="noGeoRefBecause" uitype="combobox"/>
                </row>
                <row>
                    <cell type="label" labelfor="9" />
                    <cell type="field" id="9" name="text2" uitype="combobox" colspan="5"/>
                    <cell type="label" labelfor="8" />
                    <cell type="field" id="8" name="geoRefVerificationStatus" uitype="combobox"/>
                </row>
            </rows>
        </viewdef>
    </viewdefs>
</viewset>
